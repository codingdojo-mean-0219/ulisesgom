<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.2.1/css/bootstrap.min.css">

    <title>Num Game</title>
</head>
<body>
    <div class="container mt-5">
        <div class="jumbotron text-center">
            <h1>Great Number Game</h1>
            <h2>I'm thinking of a number between 1 and 100.</h2>
            <h3 class="text-danger">Take a guess, if you dare!</h3>
            <% if(sess.message) { %>
                <h3 id="response" data-status="<%=sess.message[0]%>" class="w-100 h-75 p-5 mb-2 bg-<%=sess.message[0]%> text-white"> <%=sess.message[1] %> </h3>
                <a href="/reset" class="btn btn-secondary d-none">Play Again?</a>
            <% } %>
            
            <form action="/check_num" method="post">
                

                <div class="form-group">
                    <label for="number">Your Guess:</label>
                    <input id="number" class="form-control w-25 d-inline-block" min="1" max="100" name="number" type="number">
                </div>
                <button type="submit" class="btn btn-lg btn-danger">Guess!</button>
            </form>
        </div>
    </div>
    <script>
        const response = document.querySelector('#response');
        console.log(response.getAttribute('data-status'))
        if(response.getAttribute('data-status') === 'success') {
            document.querySelector('form').classList.add('d-none');
            document.querySelector('a.btn').classList.remove('d-none');
        }
    </script>
</body>
</html>